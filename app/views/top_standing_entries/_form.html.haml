= form_for @top_standing_entry do |f|
  - if @top_standing_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@top_standing_entry.errors.count, "error")} prohibited this top_standing_entry from being saved:"
      %ul
        - @top_standing_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :top_standing_id
    = f.number_field :top_standing_id
  .field
    = f.label :rank
    = f.number_field :rank
  .field
    = f.label :player
    = f.text_field :player
  .field
    = f.label :coach
    = f.text_field :coach
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :comments
    = f.text_area :comments
  .actions
    = f.submit 'Save'
